@startuml BitBrainic_UseCase_Diagram

' ============================================
' BIT BRAINIC - USE CASE DIAGRAM
' Style: Matching Reference Image
' Primary Actors: LEFT | Secondary Actors: RIGHT
' ============================================

' --- Styling ---
skinparam backgroundColor #FFFFFF
skinparam defaultFontName Arial
skinparam defaultFontSize 10

skinparam usecase {
    BackgroundColor #FF8C00
    BorderColor #000080  
    FontColor #FFFFFF
    FontStyle bold
    BorderThickness 2
}

skinparam actor {
    BackgroundColor #FFFFFF
    BorderColor #000080
    FontColor #000080
    FontStyle bold
}

skinparam rectangle {
    BorderColor #000080
    BorderThickness 2
    BackgroundColor #FFFEF5
}

skinparam ArrowColor #FF8C00
skinparam ArrowThickness 2

' --- Title ---
title **Bit Brainic - Use Cases**

' ============================================
' PRIMARY ACTOR (LEFT SIDE)
' ============================================

actor "User" as User

' ============================================
' SECONDARY ACTORS (RIGHT SIDE)  
' ============================================

actor "Admin" as Admin
actor "Gemini AI" as AI

' ============================================
' GENERALIZATION (Inheritance)
' User -> Admin
' ============================================

User <|-- Admin

' ============================================
' SYSTEM BOUNDARY
' ============================================

rectangle "Bit Brainic System" {
    
    ' ==========================================
    ' AUTHENTICATION LAYER
    ' ==========================================
    
    usecase "Register\nAccount" as Register
    usecase "Sign In" as SignIn
    usecase "Validate\nCredentials" as Validate
    usecase "Logout" as Logout
    
    ' ==========================================
    ' PROFILE MANAGEMENT LAYER
    ' ==========================================
    
    usecase "View\nProfile" as ViewProfile
    usecase "Update\nProfile" as UpdateProfile
    usecase "Update\nPassword" as UpdatePassword
    usecase "Select\nInterests" as SelectInterests
    usecase "Set Persona\nPrompt" as SetPersona
    usecase "Delete\nAccount" as DeleteAccount
    
    ' ==========================================
    ' CHAT MANAGEMENT LAYER
    ' ==========================================
    
    usecase "Create\nNew Chat" as CreateChat
    usecase "View All\nChats" as ViewChats
    usecase "Open\nChat" as OpenChat
    usecase "Send\nMessage" as SendMessage
    usecase "Rename\nChat" as RenameChat
    usecase "Delete\nChat" as DeleteChat
    
    ' ==========================================
    ' AI PROCESSING LAYER
    ' ==========================================
    
    usecase "Generate AI\nResponse" as GenerateAI
    usecase "Build\nPersonalized Prompt" as BuildPrompt
    usecase "Manage Chat\nHistory" as ManageHistory
    usecase "Handle API\nErrors" as HandleErrors
    usecase "Auto-Generate\nChat Title" as AutoTitle
    
    ' ==========================================
    ' ADMIN PANEL LAYER
    ' ==========================================
    
    usecase "Admin\nLogin" as AdminLogin
    usecase "View\nStatistics" as ViewStats
    usecase "View Activity\nCharts" as ViewCharts
    usecase "List All\nUsers" as ListUsers
    usecase "View User\nDetails" as ViewUserDetails
    usecase "Edit\nUser" as EditUser
    usecase "Delete\nUser" as DeleteUser
}

' ============================================
' USER ASSOCIATIONS (Primary Actor - LEFT)
' ============================================

User --> Register
User --> SignIn
User --> Logout
User --> ViewProfile
User --> UpdateProfile
User --> UpdatePassword
User --> SelectInterests
User --> SetPersona
User --> DeleteAccount
User --> CreateChat
User --> ViewChats
User --> OpenChat
User --> SendMessage
User --> RenameChat
User --> DeleteChat

' ============================================
' ADMIN ASSOCIATIONS (Secondary Actor - RIGHT)
' ============================================

AdminLogin <-- Admin
ViewStats <-- Admin
ViewCharts <-- Admin
ListUsers <-- Admin
ViewUserDetails <-- Admin
EditUser <-- Admin
DeleteUser <-- Admin

' ============================================
' AI ASSOCIATIONS (Secondary Actor - RIGHT)
' ============================================

GenerateAI <-- AI
BuildPrompt <-- AI
ManageHistory <-- AI
HandleErrors <-- AI

' ============================================
' <<INCLUDE>> RELATIONSHIPS
' (Required sub-functionality)
' ============================================

Register ..> Validate : <<include>>
SignIn ..> Validate : <<include>>
SendMessage ..> GenerateAI : <<include>>
GenerateAI ..> BuildPrompt : <<include>>
GenerateAI ..> ManageHistory : <<include>>
ViewStats ..> ViewCharts : <<include>>
OpenChat ..> ManageHistory : <<include>>

' ============================================
' <<EXTEND>> RELATIONSHIPS  
' (Optional/conditional functionality)
' ============================================

SelectInterests ..> Register : <<extend>>
SetPersona ..> ViewProfile : <<extend>>
HandleErrors ..> GenerateAI : <<extend>>
AutoTitle ..> SendMessage : <<extend>>
EditUser ..> ViewUserDetails : <<extend>>
DeleteUser ..> ListUsers : <<extend>>
RenameChat ..> OpenChat : <<extend>>
DeleteChat ..> ViewChats : <<extend>>

@enduml
